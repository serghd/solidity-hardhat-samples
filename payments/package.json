{
   "name": "petobots-gen2-payments-contract",
   "description": "Solidity Payments Contract for Petobots Gen2",
   "version": "1.0.0",
   "scripts": {
      "clean": "shx rm -rf ./artifacts ./cache ./coverage ./typechain-types ./coverage.json && yarn typechain",
      "commit": "git-cz",
      "compile": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat compile --force && tsc",
      "payments-contract-deploy-proxy-blast": "hardhat deploy --tags payments-contract-deploy-proxy-blast",
      "payments-contract-upgrade-blast": "hardhat deploy --tags payments-contract-upgrade-blast",
      "payments-contract-verify-blast": "hardhat deploy --tags payments-contract-verify-blast",
      "test-usd-contract-deploy": "hardhat deploy --tags test-usd-contract-deploy",
      "custom-transaction": "hardhat deploy --tags custom-transaction",
      "copy-abi-to-external-projects": "hardhat deploy --tags copy-abi-to-external-projects",
      "force-import": "hardhat deploy --tags force-import",
      "accounts": "hardhat deploy --tags accounts",
      "current-network-gas-price": "hardhat deploy --tags current-network-gas-price",
      "lint": "yarn lint:sol && yarn lint:ts && yarn prettier:check",
      "lint:sol": "solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
      "lint:ts": "eslint --config ./.eslintrc.yml --ignore-path ./.eslintignore --ext .js,.ts .",
      "postpublish": "pinst --enable",
      "prepublishOnly": "pinst --disable",
      "format": "prettier --config ./.prettierrc.yml --write \"**/*.{js,json,md,sol,ts,yml}\"",
      "format:check": "prettier --check --config ./.prettierrc.yml \"**/*.{js,json,md,sol,ts,yml}\"",
      "test": "hardhat test --network hardhat",
      "unit-test": "mocha -r ts-node/register 'common/**/*spec.ts'",
      "typechain": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat typechain",
      "hardhat-supported-networks": "hardhat verify --list-networks"
   },
   "devDependencies": {
      "@commitlint/cli": "^17.3.0",
      "@commitlint/config-conventional": "^17.3.0",
      "@ethersproject/abi": "^5.7.0",
      "@ethersproject/abstract-signer": "^5.7.0",
      "@ethersproject/bignumber": "^5.7.0",
      "@ethersproject/bytes": "^5.7.0",
      "@ethersproject/providers": "^5.7.2",
      "@nomicfoundation/hardhat-chai-matchers": "^2.0.4",
      "@nomicfoundation/hardhat-ethers": "^3.0.5",
      "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
      "@nomicfoundation/hardhat-toolbox": "^4.0.0",
      "@nomicfoundation/hardhat-verify": "^2.0.4",
      "@openzeppelin/contracts": "4.8.0",
      "@openzeppelin/contracts-upgradeable": "4.8.0",
      "@openzeppelin/hardhat-upgrades": "^3.0.2",
      "@trivago/prettier-plugin-sort-imports": "^4.0.0",
      "@typechain/ethers-v6": "^0.5.1",
      "@typechain/hardhat": "9.1.0",
      "@types/chai": "^4.3.4",
      "@types/fs-extra": "^9.0.13",
      "@types/lodash": "^4.14.191",
      "@types/mocha": "^10.0.1",
      "@types/node": "^18.11.10",
      "@types/uuid": "^9.0.2",
      "@typescript-eslint/eslint-plugin": "^5.45.0",
      "@typescript-eslint/parser": "^5.45.0",
      "app-root-path": "^3.1.0",
      "chai": "^4.3.7",
      "commitizen": "^4.2.5",
      "cross-env": "^7.0.3",
      "cz-conventional-changelog": "^3.3.0",
      "dayjs": "^1.11.6",
      "dotenv": "^16.0.3",
      "eslint": "^8.28.0",
      "eslint-config-prettier": "^8.5.0",
      "ethers": "^6.10.0",
      "fastify-tsconfig": "^1.0.1",
      "fs-extra": "^11.1.0",
      "hardhat": "2.19.5",
      "hardhat-deploy": "0.11.45",
      "hardhat-gas-reporter": "1.0.10",
      "lint-staged": "^13.0.4",
      "lodash": "^4.17.21",
      "merkletreejs": "^0.3.10",
      "mocha": "^10.1.0",
      "pinst": "^3.0.0",
      "prettier": "^2.8.0",
      "prettier-plugin-solidity": "^1.0.0",
      "shx": "^0.3.4",
      "solhint": "^3.3.7",
      "solhint-plugin-prettier": "^0.0.5",
      "solidity-coverage": "^0.8.2",
      "ts-generator": "^0.1.1",
      "ts-node": "^10.9.1",
      "tsconfig-paths": "^4.1.1",
      "typechain": "^8.1.1",
      "typescript": "^4.9.3",
      "uuid": "^9.0.0"
   },
   "files": [
      "/contracts"
   ],
   "keywords": [
      "blockchain",
      "ethers",
      "ethereum",
      "hardhat",
      "smart-contracts",
      "solidity",
      "typescript",
      "typechain"
   ],
   "packageManager": "yarn@3.2.1",
   "publishConfig": {
      "access": "public"
   }
}
